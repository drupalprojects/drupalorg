/**
 * Gather information for the bottom of project pages.
 *
 * @param $node
 *   The node object.
 * @return
 *   The HTML code for the book meta information.
 */
function drupalorg_project_meta_data($node) {
  $info = array();
  if ($node->nid == DRUPALORG_CORE_NID) {
    return;
  }
  foreach (taxonomy_vocabulary_get_names() as $vocabulary) {
    if (isset($node->{'taxonomy_' . $vocabulary->machine_name})) {
      $class = '';
      $links = array();
      foreach ($node->{'taxonomy_' . $vocabulary->machine_name}[$node->language] as $term) {
        $options = array();
        if ($term['taxonomy_term']->vid == '44') { // Maintenance status
          $maintenance_status = $term['taxonomy_term']->tid;
          switch ($term['taxonomy_term']->tid) {
            case '13032':  // Abandoned
              $options['attributes'] = array('class' => array('alert'));
              break;

            case '9990':   // Seeking co-maintainer(s)
            case '9992':   // Seeking new maintainer
              $options['attributes'] = array('class' => array('warning'));
              break;

          }
        }
        elseif ($term['taxonomy_term']->vid == '46') { // Development status
          $development_status = $term['taxonomy_term']->tid;
          switch ($term['taxonomy_term']->tid) {
            case '9994':   // Obsolete
              $options['attributes'] = array('class' => array('alert'));
              break;

            case '13030':  // Maintenance fixes only
            case '16374':  // No futher development
              $options['attributes'] = array('class' => array('warning'));
              break;

          }
        }
        // Special-case module category terms to link to download+extend.
        // todo d7 update for project_solr's URL.
        // todo no reason this can't work for all project node types.
        if ($term['taxonomy_term']->vid == DRUPALORG_PROJECT_CATEGORIES_VID && $node->type == 'project_module') {
          // Only use the 'terms' style for module categories.
          $class = 'terms';
          $term_path = 'project/modules';
          $options['query'] = array('filters' => 'tid:' . $term['taxonomy_term']->tid);
        }
        else {
          $uri = entity_uri('taxonomy_term', $term['taxonomy_term']);
          $term_path = $uri['path'];
        }

        $links[] = l($term['taxonomy_term']->name, $term_path, $options);
      }
      if ($vocabulary->vid == DRUPALORG_PROJECT_CATEGORIES_VID) {
        // These are hard-coded, don't incur cost of check_plain().
        $label = t('!project_type categories', array('!project_type' => node_type_get_name($node)));
      }
      else {
        $label = check_plain($vocabulary->name);
      }
      $info[$label] = '<span class="' . $class . '">' . implode(', ', $links) . '</span>';
    }
  }
  if (empty($maintenance_status)) {
    $info[t('Maintenance status')] = '<span class="warning">' . t('Unknown') . '</span>';
  }
  if (empty($development_status) && !empty($node->versioncontrol_project['repo_id'])) {
    $info[t('Development status')] = '<span class="warning">' . t('Unknown') . '</span>';
  }
  
  // Usage stats.
  // @todo project_usage_get_project_total_usage is currently broken.
  $total_usage = 0; //project_usage_get_project_total_usage($node->nid);
  if ($total_usage) {
    $info[t('Reported installs')] = format_plural($total_usage,
      '<strong>1</strong> site currently reports using this @project-type. <a href="/project/usage/!project-shortname">View usage statistics</a>.',
      '<strong>@count</strong> sites currently report using this @project-type. <a href="/project/usage/!project-shortname">View usage statistics</a>.',
      array(
        '@project-type' => drupal_strtolower($project_type->label),
        '!project-shortname' => $node->project['uri'],
      )
    );
  }

  // Download stats.
  // @todo commented out because dfletcher's test database doesn't have these.
  $downloads = 0; // db_query("SELECT sum(prf.downloads) FROM {project_release_nodes} prn INNER JOIN {project_release_file} prf ON prf.nid = prn.nid WHERE prn.pid = :pid", array(':pid' => $node->nid))->fetchField();
  if ($downloads > 0) {
    $info[t('Downloads')] = number_format($downloads);
  }

  // Automated tests.
  if (module_exists('pift')) {
    $has_auto_tests = db_query("SELECT pid FROM {pift_project} WHERE pid = :pid", array(':pid' => $node->nid))->fetchField();
    if (!empty($has_auto_tests)) {
      /// @todo Indicate if the tests are passing or not.
      $info[t('Automated tests')] = t('Enabled');
    }
  }

  $modified = format_date($node->changed, 'custom', 'F j, Y');

  return theme('drupalorg_project_meta_data', array('info' => $info, 'modified' => $modified));
}

