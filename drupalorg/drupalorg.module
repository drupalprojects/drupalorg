/**
 * Get committer & author uids for version control operations attached to an
 * issue node.
 */
function drupalorg_get_issue_committers(stdClass $node) {
  $committers = [];

  if (isset($node->versioncontrol_project_issue)) {
    foreach ($node->versioncontrol_project_issue['operations'] as $operation) {
      if ($operation->author_uid) {
        $committers[$operation->author_uid] = TRUE;
      }
      if ($operation->committer_uid) {
        $committers[$operation->committer_uid] = TRUE;
      }
    }
  }

  return $committers;
}

/**
 * Get a base URL for making authenticated requests to Chargify’s API.
 */
function _drupalorg_chargify_base_url($currency) {
  $chargify = variable_get('drupalorg_chargify_keys')[$currency];
  return 'https://' . $chargify['api_key'] . ':' . $chargify['password'] . '@' . $chargify['subdomain'] . '.chargify.com/';
}

/**
 * Get a user’s Chargify subscriptions.
 */
function _drupalorg_get_chargify_subscriptions(stdClass $account) {
  return db_query('SELECT uid, organization_nid, currency, subscription_id, state, current_billing_amount_in_cents, created_at, current_period_ends_at, expires_at, product_handle, product_name, customer_id, customer_first_name, customer_last_name, customer_organization, customer_email FROM {drupalorg_chargify_subscriptions} WHERE uid = :uid', [':uid' => $account->uid])->fetchAll();
}

/**
 * Update a single Chargify subscription.
 */
function _drupalorg_update_chargify_subscription($currency, stdClass $subscription) {
  $row = [
    'state' => $subscription->subscription->state,
    // Imported transactions could not be backdated.
    'created_at' => min(strtotime($subscription->subscription->created_at), strtotime($subscription->subscription->activated_at)),
    'product_handle' => $subscription->subscription->product->handle,
    'product_name' => $subscription->subscription->product->name,
    'customer_id' => $subscription->subscription->customer->id,
    'customer_first_name' => $subscription->subscription->customer->first_name,
    'customer_last_name' => $subscription->subscription->customer->last_name,
    'customer_organization' => $subscription->subscription->customer->organization,
    'customer_email' => $subscription->subscription->customer->email,
  ];
  if (empty($subscription->subscription->customer->reference)) {
    // Not matched up to a user account, return early.
    return $row;
  }
  // Customer reference is {uid}[-{extra}]. Optional extra is
  // organization NID or “donation”.
  if (strpos($subscription->subscription->customer->reference, '-') === FALSE) {
    $row['uid'] = $subscription->subscription->customer->reference;
  }
  else {
    list($row['uid'], $reference_extra) = explode('-', $subscription->subscription->customer->reference);
  }
  if ($row['product_handle'] === 'donation') {
    // Donation “subscriptions” expire quickly, use the total revenue.
    $row['current_billing_amount_in_cents'] = $subscription->subscription->total_revenue_in_cents;
  }
  else {
    if (!empty($subscription->subscription->current_period_ends_at)) {
      $row['current_period_ends_at'] = strtotime($subscription->subscription->current_period_ends_at);
    }
    if (!empty($subscription->subscription->expires_at)) {
      $row['expires_at'] = strtotime($subscription->subscription->expires_at);
    }

    // Add the base product price and donation component quantity.
    $row['current_billing_amount_in_cents'] = $subscription->subscription->product_price_in_cents;
    $response_component = drupal_http_request(url(_drupalorg_chargify_base_url($currency) . 'subscriptions/' . $subscription->subscription->id . '/components.json'));
    if ($response_component->code != 200) {
      if (function_exists('drush_log')) {
        drush_log(dt('Failed to fetch components for subscription @subscription_id (@currency)', ['@subscription_id' => $subscription->subscription->id, '@currency' => $currency]), 'error');
      }
      else {
        watchdog('drupalorg_chargify', 'Failed to fetch components for subscription @subscription_id (@currency)', ['@subscription_id' => $subscription->subscription->id, '@currency' => $currency], WATCHDOG_ERROR);
        drupal_set_message(t('Failed to fetch components.'), 'error');
      }
      return;
    }
    $data_component = json_decode($response_component->data);
    if ($data_component === NULL) {
      if (function_exists('drush_log')) {
        drush_log(dt('Failed to parse components for subscription @subscription_id (@currency)', ['@subscription_id' => $subscription->subscription->id, '@currency' => $currency]), 'error');
      }
      else {
        watchdog('drupalorg_chargify', 'Failed to parse components for subscription @subscription_id (@currency)', ['@subscription_id' => $subscription->subscription->id, '@currency' => $currency], WATCHDOG_ERROR);
        drupal_set_message(t('Failed to parse components.'), 'error');
      }
      return;
    }
    foreach ($data_component as $component) {
      if ($component->component->component_id == variable_get('drupalorg_chargify_keys')[$currency]['donation_component']) {
        $row['current_billing_amount_in_cents'] += round($component->component->allocated_quantity * 100);
      }
    }

    // For organization membership, get the organization NID.
    if (strpos($row['product_handle'], 'organization') === 0) {
      if (isset($reference_extra) && ctype_digit($reference_extra)) {
        $row['organization_nid'] = $reference_extra;
      }
      else {
        watchdog('drupalorg_chargify', 'Missing organization nid for @subscription_id (@currency)', ['@subscription_id' => $subscription->subscription->id, '@currency' => $currency]);
      }
    }
  }

  db_merge('drupalorg_chargify_subscriptions')
    ->key([
      'subscription_id' => $subscription->subscription->id,
      'currency' => $currency,
    ])
    ->fields($row)
    ->execute();

  switch (explode('-', $row['product_handle'])[0]) {
    case 'individual':
      if ($account = user_load($row['uid'])) {
        $account_wrapper = entity_metadata_wrapper('user', $account);
        $changed = FALSE;
        if ($row['state'] === 'active') {
          if ($account_wrapper->field_da_ind_membership->value() !== 'Current') {
            $account_wrapper->field_da_ind_membership = 'Current';
            $changed = TRUE;
          }
          if ($account_wrapper->field_da_join_date->value() != $row['created_at']) {
            $account_wrapper->field_da_join_date = $row['created_at'];
            $changed = TRUE;
          }
          if ($account_wrapper->field_da_expiration_date->value() != $row['current_period_ends_at']) {
            $account_wrapper->field_da_expiration_date = $row['current_period_ends_at'];
            $changed = TRUE;
          }
          $rid = variable_get('drupalorg_crosssite_trusted_role', 36);
          // Grant trusted role.
          if (!isset($account->roles[$rid])) {
            $account->roles[$rid] = TRUE;
            $changed = TRUE;
          }
        }
        else {
          if ($account_wrapper->field_da_ind_membership->value()) {
            $account_wrapper->field_da_ind_membership = '';
            $changed = TRUE;
          }
          if ($account_wrapper->field_da_join_date->value()) {
            $account_wrapper->field_da_join_date = 0;
            $changed = TRUE;
          }
          if ($account_wrapper->field_da_expiration_date->value()) {
            $account_wrapper->field_da_expiration_date = 0;
            $changed = TRUE;
          }
        }
        if ($changed) {
          user_save($account);
        }
      }
      break;

    case 'organization':
      if (!empty($row['organization_nid']) && ($organization = node_load($row['organization_nid']))) {
        $organization_wrapper = entity_metadata_wrapper('node', $organization);
        $changed = FALSE;
        if ($row['state'] === 'active') {
          if ($organization_wrapper->field_org_membership_status->value() !== 'Current') {
            $organization_wrapper->field_org_membership_status = 'Current';
            $changed = TRUE;
          }
        }
        else {
          if ($organization_wrapper->field_org_membership_status->value()) {
            $organization_wrapper->field_org_membership_status = '';
            $changed = TRUE;
          }
        }
        if ($changed) {
          node_save($organization);
        }
      }
      break;
  }

  // Update MailChimp merge vars, if they have changed.
  $field = field_info_field('field_subscribe_membership');
  if (mailchimp_is_subscribed($field['settings']['mc_list_id'], $account->mail)) {
    $member_info = mailchimp_get_memberinfo($field['settings']['mc_list_id'], $account->mail);
    $instance = field_info_instance('user', $field['field_name'], 'user');
    $mergefields = $instance['settings']['mergefields'];
    $merge_vars = _mailchimp_lists_mergevars_populate($mergefields, $account, 'user', $field['settings']['mc_list_id']);
    if (array_diff_assoc($merge_vars, (array) $member_info->merge_fields, array_intersect_key($merge_vars, ['EMAIL' => NULL, 'advanced' => NULL]))) {
      mailchimp_update_member($field['settings']['mc_list_id'], $account->mail, $merge_vars);
    }
  }

  return $row;
}

/**
 * Format the billing amount of a Chargify subscription.
 */
function _format_chargify_money($row) {
  static $symbols = [
    'usd' => '$',
    'eur' => '€',
  ];

  return $symbols[$row->currency] . number_format(floor($row->current_billing_amount_in_cents / 100)) . '.' . str_pad($row->current_billing_amount_in_cents % 100, 2, '0', STR_PAD_LEFT);
}

/**
 * Return array of nid => sanitized organization title of the current user’s
 * current organizations.
 */
function _drupalorg_organization_options() {
  $user_wrapper = entity_metadata_wrapper('user', $GLOBALS['user']);
  $options = [];
  foreach ($user_wrapper->field_organizations as $organization) {
    if ($organization->field_current->value() && $organization->field_organization_reference->raw()) {
      $options[$organization->field_organization_reference->raw()] = check_plain($organization->field_organization_reference->label());
    }
  }

  return $options;
}

/**
 * Implements hook_restws_response_alter().
 */
function drupalorg_restws_response_alter(&$response, $function, $formatName, $resourceController) {
  if ($resourceController->resource() === 'node') {
    switch ($function) {
      case 'queryResource':
        // Add author name to node API.
        $uids = [];
        foreach ($response['list'] as $value) {
          $uids[$value['author']['id']] = TRUE;
        }
        if ($uids) {
          $names = db_select('users')
            ->fields('users', ['uid', 'name'])
            ->condition('uid', array_keys($uids))
            ->execute()->fetchAllKeyed();
          foreach ($response['list'] as &$value) {
            $value['author']['name'] = $names[$value['author']['id']];
          }
        }
        // Add sponsored projects to organization node API.
        $parameters = drupal_get_query_parameters();
        if (isset($parameters['type']) && $parameters['type'] === 'organization') {
          foreach ($response['list'] as &$value) {
            $value['projects_supported'] = drupalorg_get_organization_supported_projects($value['nid']);
          }
        }
        break;

      case 'viewResource':
        if ($response['type'] === 'sa') {
          // Add security risk score and label.
          $response['sa_risk'] = drupalorg_calculate_security_risk($response['field_sa_criticality']);
        }
        elseif ($response['type'] === 'organization') {
          // Add sponsored projects.
          $response['projects_supported'] = drupalorg_get_organization_supported_projects($response['nid']);
        }

        if (!empty($response['field_project']['id'])) {
          // Add project’s machine name.
          $response['field_project']['machine_name'] = node_load($response['field_project']['id'])->field_project_machine_name[LANGUAGE_NONE][0]['value'];
        }
        break;
    }
  }
  elseif ($resourceController->resource() === 'comment') {
    if (!empty($response['node'])) {
      // Get file details of a comment.
      $result = nodechanges_get_changed_cids_keyed(node_load($response['node']['id']), 'field_issue_files', 'fid');
      $files = [];
      foreach ($result as $key => $value) {
        if ($value === $response['cid']) {
          if ($file_data = file_load($key)) {
            $file_items['id'] = isset($file_data->fid) ? $file_data->fid : 0;
            $file_items['url'] = isset($file_data->uri) ? file_create_url($file_data->uri): 0;
            $file_items['filename'] = isset($file_data->filename) ? $file_data->filename : 0;
            $files[] = $file_items;
          }
        }
      }
      if ($files) {
        $response['comment_files'] = $files;
      }
    }
  }
}

/**
 * Function to get sponsored projects.
 */
function drupalorg_get_organization_supported_projects($nid = NULL) {
  $projects = [];

  $view = views_get_view('drupalorg_organization_supported_projects');
  $view->preview(NULL, [$nid]);

  foreach ($view->result as $item) {
    $projects[] = [
      'id' => $item->nid,
      'title' => $item->node_title,
      'uri' => restws_resource_uri('node', $item->nid),
    ];
  }

  return $projects;
}

/**
 * Implements hook_form_FORM_ID_alter.
 */
function drupalorg_form_mailchimp_signup_subscribe_form_alter(&$form, &$form_state) {
  // Control interest group sprawl.
  foreach (variable_get('drupalorg_suppress_interest_groups', []) as $id) {
    unset($form['mailchimp_lists']['interest_groups'][$id]);
  }

  // Only add a single list for some forms.
  $list_forms = [
    'hosting_offers' => [
      'parent' => '41ac996e3d',
      'value' => ['eb3fcc4be5' => TRUE],
      'hide' => ['853d1901d5', '27985faf3e', 'de188429fc', 'ef73b36223', 'f66bd3cafd'],
    ],
  ];
  if (isset($list_forms[$form_state['build_info']['args'][0]->name])) {
    $form['mailchimp_lists']['interest_groups'][$list_forms[$form_state['build_info']['args'][0]->name]['parent']]['#type'] = 'value';
    $form['mailchimp_lists']['interest_groups'][$list_forms[$form_state['build_info']['args'][0]->name]['parent']]['#value'] = $list_forms[$form_state['build_info']['args'][0]->name]['value'];
    foreach ($list_forms[$form_state['build_info']['args'][0]->name]['hide'] as $id) {
      unset($form['mailchimp_lists']['interest_groups'][$id]);
    }
  }

  if (user_is_logged_in()) {
    $account_wrapper = entity_metadata_wrapper('user', $GLOBALS['user']);

    // Fill out name & email.
    $form['mergevars']['EMAIL']['#type'] = 'value';
    $form['mergevars']['EMAIL']['#value'] = $GLOBALS['user']->mail;
    $form['mergevars']['DRUPNAME']['#type'] = 'value';
    $form['mergevars']['DRUPNAME']['#value'] = $GLOBALS['user']->name;
    $form['mergevars']['FNAME']['#type'] = 'value';
    $form['mergevars']['LNAME']['#type'] = 'value';
    if ($name = $account_wrapper->field_first_name->value()) {
      $form['mergevars']['FNAME']['#value'] = $name;
    }
    else {
      $form['mergevars']['FNAME']['#value'] = $GLOBALS['user']->name;
    }
    if ($name = $account_wrapper->field_last_name->value()) {
      $form['mergevars']['LNAME']['#value'] = $name;
    }
    $form['mergevars']['#prefix'] .= t('We’ll send occasional updates to @mail<br><small><a href="!url">Update your primary email</a></small>', ['@mail' => $GLOBALS['user']->mail, '!url' => url('user/' . $GLOBALS['user']->uid . '/edit/email-addresses')]);
  }
  else {
    $form['mergevars']['#prefix'] .= t('We’ll send occasional updates');
    hide($form['mergevars']['LNAME']);
  }

  if (user_is_logged_in() && !empty($account_wrapper->field_country->value())) {
    $form['mergevars']['COUNTRY']['#type'] = 'value';
    $form['mergevars']['COUNTRY']['#value'] = $account_wrapper->field_country->label();
  }
  elseif ($country = drupalorg_get_and_vary_header('GeoIP-country')) {
    $country_names = list_allowed_values(field_info_field('field_country'));
    if (isset($country_names[$country])) {
      $form['mergevars']['COUNTRY']['#value'] = $country_names[$country];
    }
  }
}
