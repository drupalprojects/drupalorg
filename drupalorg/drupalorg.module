function drupalorg_preprocess_flag(&$variables) {
  if ($variables['flag']->name === 'project_star') {
    $flag_count = flag_get_counts('node', $variables['entity_id']);
    if (!empty($flag_count['project_star'])) {
      $variables['after_flagging'] = TRUE;
