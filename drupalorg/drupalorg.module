/**
 * Validate for a positive integer.
 */
function drupalorg_validate_int($element) {
  if (!preg_match('/^[0-9]+$/', $element['#value']) || (int) $element['#value'] <= 0) {
    form_error($element, t('Number of posts must be a positive integer.'));
  }
}

